@using ProjeMVCV1._2.Models.Entity;
@model ProjeMVCV1._2.Models.Entity.MultipleClass2

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/Content/FaturaOlusturStyle.css">
    <script src="/Scripts/FaturaOlusturJS.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="jquery-3.1.1.min.js"></script>
    <title>Giriş Faturası Oluşturma</title>

    <style>
        #btnUrunEkle {
            position: relative;
            top: 20px;
            left: 170px;
            background-color: #0098ff;
        }

        .nav-item {
            margin-left: 10px;
        }

        #home {
            margin-left: 0px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url('/Content/FaturaBackground.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        #tarih {
            margin-top: 20px;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="z-index:10;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Menu/Index" style="color:#94dd26; font-weight: bold;">Hustle</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" id="home" href="/KesilenFatura/FaturaOlustur">Giriş Faturası Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/CikisFaturasiOlustur">Çıkış Faturası Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/FaturalariListele">Faturaları Listele</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/Muhasebe">Muhasebe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Hesap/Index/@ViewBag.ID">Ayarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Menu/KullaniciGiris" style="position:relative; left:45.6vw;">Çıkış</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <form class="form-body" method="post" style="position:relative; bottom: 68px;">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items" id="FaturaOlusturForm">

                        <label style="font-weight: bold;">Fatura Bilgilerini Giriniz:</label>
                        <div class="col-md-12 mt-2">

                            @Html.TextBoxFor(model => model.bizeKesilenFaturaDetaylari.GelenFaturaVergiNo, new { @class = "form-control", @placeholder = "Vergi No" })

                            @Html.TextBoxFor(model => model.bizeKesilenFaturaDetaylari.GelenFaturaUnvan, new { @class = "form-control", @placeholder = "Unvan" })
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaDetaylari.GelenFaturaVergiDairesi, new { @class = "form-control", @placeholder = "Vergi Dairesi" })
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaDetaylari.GelenFaturaAdres, new { @class = "form-control", @placeholder = "Adres" })
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaDetaylari.GelenFaturaTarih, new { @class = "form-control", type = "datetime-local", @id = "tarih"})
                        </div>
                    </div>
                </div>


                <div id="westarz" style="position :relative; bottom: 55px;">
                    @for (int i = 0; i < 5; i++)
                    {
                    <div class="row" style="margin-bottom: 12px;">
                        <div class="col">
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaIcerikDetaylari[i].GelenFaturaUrunAdi, new { @class = "form-control", @placeholder = "Ürün Adı" })
                        </div>
                        <div class="col">
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaIcerikDetaylari[i].GelenFaturaUrunMiktar, new { @class = "form-control", @placeholder = "Miktar", @id = "Miktar" })
                        </div>
                        <div class="col">
                            @Html.TextBoxFor(model => model.bizeKesilenFaturaIcerikDetaylari[i].GelenFaturaBirimFiyat, new { @class = "form-control", @placeholder = "Birim Fiyat", @id = "birimFiyat" })
                        </div>
                        <div class="col">

                            @Html.TextBoxFor(model => model.bizeKesilenFaturaIcerikDetaylari[i].GelenFaturaKDVOrani, new { @class = "form-control", @placeholder = "KDV Oranı", @id = "KDV"})

                        </div>
                        
                    </div>
                    }
                </div>
                <div class="col" id="faturaeklebuton">
                    <button style="
    position: relative;
    margin: 10px; bottom: 65px; right:10px; background-color: #94dd26;width: 150px; border-radius: 3px;" type="submit">
                        <span style="color: white; font-weight: bold;">Kaydet</span>
                    </button>
                </div>
                </div>
            </div>

    </form>
</body>

</html>