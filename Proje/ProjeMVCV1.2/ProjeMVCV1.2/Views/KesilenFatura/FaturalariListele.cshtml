
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="/Content/FaturaListeleStyle.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Faturaları Listele</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <script src="jquery-3.1.1.min.js"></script>

    <script>
         $(function() {
             $('#checkGiris').change(function () {
                 var isCheckedGiris = document.getElementById('checkGiris');
                 if (isCheckedGiris) {
                $.ajax({
                    url: '@Url.Action("GirisFaturalariListele")',
                    type: 'GET',
                    cache: false,
                }).done(function(result) {
                    $('#dvFatura').html(result);
                });
            }
        });
    });

        $(function() {
             $('#checkCikis').change(function () {
                 var isCheckedCikis = document.getElementById('checkCikis');
                 if (isCheckedCikis) {
                $.ajax({
                    url: '@Url.Action("CikisFaturalariListele")',
                    type: 'GET',
                    cache: false,
                }).done(function(result) {
                    $('#dvFatura').html(result);
                });
            }
        });
    });


    </script>

    <style>
        .nav-item {
            margin-left: 10px;
            margin-right: 10px;
            position: relative;
            right: 30px;
            font-size: 16px;
        }

        a:hover{
            text-decoration:none;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url('/Content/FaturaBackground.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        #FaturaList th {
            background-color: #8cdd26;
        }

    </style>

</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="border-radius:0px; height:57px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Menu/Index" style="color:#94dd26; font-weight: bold; font-size: 20px; position: relative; right:2px;">Hustle</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" id="home" href="/KesilenFatura/FaturaOlustur">Giriş Faturası Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/CikisFaturasiOlustur">Çıkış Faturası Oluştur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/FaturalariListele">Faturaları Listele</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/KesilenFatura/Muhasebe">Muhasebe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Hesap/Index/@ViewBag.ID">Ayarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Menu/KullaniciGiris" style="position:relative; left:44.5vw;">Çıkış</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row" id="btnSecim">
            <div class="col" id="checkGiris">
                <input type="radio" class="bizekesilen" name="faturatur" style=" width: 27px; height: 27px; position: relative ; top:12px"><span style="font-weight: bold; font-size: 20px; position: relative; top: 5px; left: 10px;">Giriş Faturası @ViewBag.hesapVergiNo</span></input>
            </div>
            <div class="col" id="checkCikis">
                <input type="radio" class="kesilen" name="faturatur" style="width: 27px; height: 27px;  position: relative ; top:12px"><span style="font-weight: bold; font-size: 20px; position: relative; top: 5px; left: 10px;">Çıkış Faturası</span></input>
            </div>
        </div>

        <div class="row" id="dvFatura">

            <table id="FaturaList">

                <tr>
                    <th style="width:24%"> Fatura No</th>
                    <th style="width:64%"> Ünvan  </th>
                    <th style="width:24%"> Tarih </th>
                    <th>Listele</th>
                    <th>Sil</th>
                </tr>
            </table>

        </div>

    </div>
</body>
</html>