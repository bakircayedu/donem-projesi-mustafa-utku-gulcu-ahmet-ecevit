@using ProjeMVCV1._2.Models.Entity;
@model ProjeMVCV1._2.Models.Entity.MultipleClass2


@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Hustle Kayıt Ekranı</title>
    <link rel="stylesheet" type="text/css" href="/Content/ayarlarStyle.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .iconbox {
            position: relative;
            top: 57px;
            left: -600px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-image: url('/Content/hustle_2.png');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>

<body>

    <div class="box">
        <h1 align="center" style="font-weight: bold;">Ayarlar</h1>
        <form role="form" method="post">
            <div class="inputBox">
                <input type="text" style="font-weight: bold; background-color: white; border-radius: 3px;" name="username" autocomplete="off" readonly="" placeholder="Vergi No: @Model.hesapDetaylari.VergiNo">
            </div>
            <div class="inputBox">
                @Html.EditorFor(m => m.hesapDetaylari.Unvan)
                <label>Unvan</label>
            </div>
            <div class="inputBox">
                @Html.EditorFor(m => m.hesapDetaylari.VergiDairesi)
                <label>Vergi Dairesi</label>
            </div>

            @Html.HiddenFor(m => m.hesapDetaylari.VergiNo)

            <div class="inputBox">
                @Html.EditorFor(m => m.hesapDetaylari.Adres)
                <label>Adres</label>
            </div>
            <div class="inputBox">
                @Html.EditorFor(m => m.hesapDetaylari.Sifre)
                <label>Şifre</label>
            </div>

            <input type="submit" name="singin" value="Kaydet">
        </form>
    </div>
</body>

</html>